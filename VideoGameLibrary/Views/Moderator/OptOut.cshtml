@model ModeratorOptOutViewModel

<link rel="stylesheet" href="~/css/dark.css" asp-append-version="true" />

<h1>Opt Out of Moderator Role</h1>

<p>Are you sure you want to opt out of the moderator role?</p>

<form method="post" asp-action="Remove" asp-controller="Moderator" asp-area="">
    <div class="mb-3">
        <input asp-for="Id" type="hidden" />
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label-add-edit">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" aria-required="true" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" name="optOut" value="true" class="btn btn-primary">Yes, I'm sure</button>
        <a href="@Url.Action("All", "Game")" class="btn btn-secondary">No, take me back</a>
    </div>
</form>