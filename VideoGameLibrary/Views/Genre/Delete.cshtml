@using VideoGameLibrary.Web.ViewModels.Genre
@model GenreDeleteViewModel
<link rel="stylesheet" href="~/css/dark.css" asp-append-version="true" />


<h2>Delete Genre</h2>

<h3>Are you sure you want to delete the genre "@Model.Name"?</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="GenreCrud" class="btn btn-secondary">Cancel</a>
</form>