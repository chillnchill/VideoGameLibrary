@using VideoGameLibrary.Web.ViewModels.Moderator
@model ModeratorApplicationViewModel

<h2>Moderator Application</h2>

<form asp-controller="Moderators" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number (required):</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nickname">Nickname:</label>
        <input asp-for="Nickname" class="form-control" placeholder="Enter Nickname">
    </div>

    <div class="form-group">
        <label asp-for="AboutMe">Tell us about yourself:</label>
        <textarea asp-for="AboutMe" class="form-control" rows="5" placeholder="Share your experience, interests, and why you'd make a great moderator"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Apply to Become a Moderator</button>
</form>