@model NewPlatformViewModel
<link rel="stylesheet" href="~/css/dark.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Edit Platform";
}

<h2>Edit Platform</h2>

<form asp-action="Update" asp-route-id="@Model.Id" method="post" class="create-platform-form mb-4" style="max-width: 400px;">
    <div class="form-group">
        <label asp-for="NewPlatformName">New platform name:</label>
        <input asp-for="NewPlatformName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>


