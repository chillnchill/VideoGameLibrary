@model VideoGameLibrary.Web.ViewModels.Genre.NewGenreViewModel
<link rel="stylesheet" href="~/css/dark.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Edit Genre";
}

<h2>Edit Genre</h2>

<form asp-action="Update" asp-route-id="@Model.Id" method="post" class="create-genre-form mb-4" style="max-width: 400px;">
    <div class="form-group">
        <label asp-for="NewGenreName">New genre name:</label>
        <input asp-for="NewGenreName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>


