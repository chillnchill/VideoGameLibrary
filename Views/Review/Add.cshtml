@model VideoGameLibrary.Web.ViewModels.Review.NewReviewViewModel
<link rel="stylesheet" href="~/css/dark.css" asp-append-version="true" />

<h2>Add a New Review</h2>

<form asp-action="AddReview" method="post">
    <div class="form-group">
        <label asp-for="Content">Content</label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Number of Stars (from 1 to 5)</label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5">
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>