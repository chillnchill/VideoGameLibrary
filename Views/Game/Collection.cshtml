@using VideoGameLibrary.Web.ViewModels.Game
@model IEnumerable<AllGamesViewModel>
<link rel="stylesheet" href="~/css/dark.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/collection.css" asp-append-version="true" />


<h1>My Game Collection</h1>

<div class="title"></div>
@if (Model.Any())
{
	@foreach (var game in Model)
	{
		<a href="@Url.Action("Details", "Game", new { id = game.Id })">
		<div class="game-box">
			<img src="@game.CoverImg" alt="Cover Image" />
			<div class="game-details">
				<h2>@game.Title</h2>
				<p><strong>Price:</strong> @game.Price</p>
				<p><strong>Developer:</strong> @game.Developer</p>
				<p><strong>Publisher:</strong> @game.Publisher</p>
				<p><strong>Release Date:</strong> @game.ReleaseDate</p>
			</div>
		</div>
		</a>
	}
}
else
{
	<p>No games in your collection yet.</p>
}