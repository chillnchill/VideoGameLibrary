@using VideoGameLibrary.Web.ViewModels.Game
@model DeleteViewModel
@{
	ViewData["Title"] = "Delete Game";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="card">
			<div class="card-body">
				<h3 class="card-title text-center">@Model.Title</h3>
				<p class="mb-0"><strong>Description:</strong> @Model.Description</p>
				<p class="mb-0"><strong>Platform:</strong> @Model.Platform</p>
				<p class="text-danger mt-3">"Are you sure you want to delete this game from the library?"</p>
			</div>
			<div class="card-footer">
				<form asp-action="DeleteConfirmed" method="post">
					<input type="hidden" name="gameId" value="@Model.Id" />
					<button type="submit" class="btn btn-danger">Confirm Delete</button>
					<a asp-controller="Game" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
				</form>
			</div>
		</div>
	</div>
</div>
